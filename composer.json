{
    "name": "mram/laravel-hot-reload",
    "description": "Laravel hot reload using Browsersync (dev-only)",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "hot-reload",
        "browsersync",
        "dev-tool"
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "symfony/process": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Mram\\LaravelHotReload\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mram\\LaravelHotReload\\HotReloadServiceProvider"
            ]
        }
    }
}